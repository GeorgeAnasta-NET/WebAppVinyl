@model WebAppVinyl.ViewModels.VinylFormViewModel
@{
    /**/

    ViewBag.Title = "VinylForm";
}


<h2>Vinyl Form</h2>
@using (Html.BeginForm("Save", "Vinyls"))
{
    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()
    //Me tin apo katw vlepw ti xreiazomai gia na ginei validate to modelo mou
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.Title)
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Title)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Artist)
        @Html.TextBoxFor(m => m.Artist, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Artist)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Label)
        @Html.DropDownListFor(m => m.Label, new SelectList(Model.Labels, "Id", "Name"), "--Select--", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Label)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ReleaseYear)
        @Html.TextBoxFor(m => m.ReleaseYear, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ReleaseYear)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Genre)
        @Html.DropDownListFor(m => m.Genre, new SelectList(Model.Genres, "Id", "Name"), "--Select--", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Genre)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Price)
        @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Price)
    </div>

    <button type="submit" class="btn btn-primary">Save</button>

}

